    min-width: 160px;
    z-index: 50;
    margin-top: 0.5rem;
}

.dropdown:hover .dropdown-content {
    display: block;
}

.dropdown-content a {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    color: var(--text);
    text-decoration: none;
    transition: background 0.1s;
}

.dropdown-content a:hover {
    background: var(--bg-hover);
}

.context-menu {
    position: fixed;
    background: var(--card);
    border: 1px solid var(--border);
    border-radius: 0.5rem;
    box-shadow: 0 4px 20px rgba(0,0,0,0.15);
    z-index: 1000;
    min-width: 180px;
    display: none;
    overflow: hidden;
}

.context-menu li {
    padding: 0.75rem 1rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--text);
    font-size: 0.9rem;
    transition: background 0.1s;
}

.context-menu li:hover {
    background: var(--bg-hover);
}

.context-menu li.danger { color: #ef4444; }
.context-menu li.danger:hover { background: #fee2e2; }

/* --- Bulk Actions Bar --- */
.bulk-actions {
    position: fixed;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%) translateY(100px);
    background: var(--text);
    color: var(--bg);
    padding: 0.75rem 1.5rem;
    border-radius: 3rem;
    display: flex;
    align-items: center;
    gap: 1.5rem;
    box-shadow: 0 10px 25px rgba(0,0,0,0.2);
    z-index: 100;
    opacity: 0;
    transition: transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275), opacity 0.3s;
}

.bulk-actions.active {
    transform: translateX(-50%) translateY(0);
    opacity: 1;
}

.bulk-actions .actions {
    display: flex;
    gap: 0.5rem;
}

.bulk-actions button {
    background: rgba(255,255,255,0.2);
    border: none;
    color: white;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.2s;
}

.bulk-actions button:hover {
    background: rgba(255,255,255,0.3);
}

.bulk-actions button.danger:hover {
    background: #ef4444;
}

/* --- Modals --- */
.modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.6);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.2s;
    z-index: 2000;
    backdrop-filter: blur(2px);
}

.modal.active {
    opacity: 1;
    pointer-events: auto;
}

.modal-box {
    background: var(--card);
    width: 100%;
    max-width: 420px;
    padding: 2rem;
    border-radius: 1rem;
    box-shadow: 0 20px 25px -5px rgba(0,0,0,0.1);
    transform: scale(0.95);
    transition: transform 0.2s;
}

.modal.active .modal-box {
    transform: scale(1);
}

.modal-box h3 {
    margin-bottom: 1.5rem;
    font-size: 1.25rem;
}

.full-input {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid var(--border);
    border-radius: 0.5rem;
    background: var(--bg);
    color: var(--text);
    margin-bottom: 1rem;
}

.modal-footer {
    display: flex;
    justify-content: flex-end;
    gap: 0.75rem;
    margin-top: 1rem;
}

.modal-footer .btn {
    padding: 0.6rem 1.2rem;
    border-radius: 0.5rem;
    cursor: pointer;
    font-weight: 500;
    border: none;
}

.modal-footer .cancel-btn { background: transparent; color: var(--muted-text); }
.modal-footer .confirm-btn { background: var(--primary); color: white; }

/* --- Mobile Responsiveness --- */
@media (max-width: 768px) {
    /* Layout */
    .dashboard-layout {
        position: relative;
    }

    /* Sidebar - Off Canvas */
    .sidebar {
        position: fixed;
        top: var(--header-height);
        left: -100%; /* Sembunyikan sidebar ke kiri */
        height: calc(100vh - var(--header-height));
        width: 100%; /* Full width di mobile */
        max-width: 280px;
        box-shadow: 10px 0 30px rgba(0,0,0,0.1);
        z-index: 1000;
    }

    /* Class untuk membuka sidebar via JS nanti */
    .sidebar.active {
        transform: translateX(100%); /* Geser masuk */
        left: -280px; /* Offset koreksi agar pas */
    }

    /* Action Bar */
    .action-bar {
        gap: 0.75rem;
    }

    .search-bar-wrapper {
        order: 3;
        flex: 1 1 100%;
        max-width: 100%;
    }

    .primary-btn span, .secondary-btn span {
        display: none; /* Sembunyikan teks tombol di mobile, sisakan icon */
    }

    .primary-btn, .secondary-btn {
        padding: 0.6rem;
    }

    /* File Grid */
    .file-grid {
        grid-template-columns: repeat(2, 1fr); /* 2 Kolom di HP */
        gap: 0.75rem;
    }

    .file-card {
        padding: 0.75rem;
    }
    
    .file-preview {
        font-size: 2.5rem;
    }

    .file-card.folder {
        height: auto;
        flex-direction: column;
        text-align: center;
    }
    
    .file-card.folder .file-preview {
        margin-right: 0;
        margin-bottom: 0.5rem;
    }

    .file-card.folder .file-details {
        text-align: center;
    }

    /* Bulk Actions */
    .bulk-actions {
        width: 90%;
        justify-content: space-between;
        bottom: 1.5rem;
    }
    
    #dropZone {
        padding: 1rem;
    }
}
