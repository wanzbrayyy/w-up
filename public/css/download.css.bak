:root {
    --bg: #f3f4f6;
    --card: #ffffff;
    --text: #1f2937;
    --muted-text: #6b7280;
    --primary: #2563eb;
    --border: #e5e7eb;
    --bg-hover: #e5e7eb;
}

[data-theme="dark"] {
    --bg: #111827;
    --card: #1f2937;
    --text: #f9fafb;
    --muted-text: #9ca3af;
    --primary: #3b82f6;
    --border: #374151;
    --bg-hover: #374151;
}

.download-page-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: calc(100vh - 73px);
    padding: 2rem 1.5rem;
    box-sizing: border-box;
}

.download-card {
    background: var(--card);
    padding: 2rem 2.5rem;
    border-radius: 1rem;
    box-shadow: 0 10px 25px rgba(0,0,0,0.05);
    width: 100%;
    max-width: 600px;
    text-align: center;
    border: 1px solid var(--border);
    margin-bottom: 2rem;
}

.file-icon-wrapper {
    width: 90px;
    height: 90px;
    background: rgba(59, 130, 246, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
}

.file-icon {
    font-size: 3rem;
    color: var(--primary);
}

.filename {
    font-size: 1.75rem;
    font-weight: 800;
    margin-bottom: 0.5rem;
    word-break: break-all;
    color: var(--text);
}

.file-meta {
    color: var(--muted-text);
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
}

.btn-download {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    width: 100%;
    background: var(--primary);
    color: white;
    padding: 1rem;
    border-radius: 0.75rem;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.125rem;
    transition: transform 0.2s, box-shadow 0.2s, opacity 0.2s;
    box-shadow: 0 4px 6px rgba(37, 99, 235, 0.2);
    border: none;
    cursor: pointer;
}

.btn-download:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 15px rgba(37, 99, 235, 0.3);
}

.btn-download.disabled {
    cursor: not-allowed;
    background: var(--muted-text);
    box-shadow: none;
    transform: none;
}

.preview-area {
    margin-top: 1.5rem;
    border-radius: 0.75rem;
    overflow: hidden;
    border: 1px solid var(--border);
    display: none;
    background: var(--bg);
}

.preview-content {
    max-width: 100%;
    display: block;
}

.virus-badge {
    margin-bottom: 1rem;
    display: inline-block;
}

.badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.25rem 0.75rem;
    border-radius: 999px;
    font-size: 0.8rem;
    font-weight: 600;
}

.badge.loading {
    background: var(--bg-hover);
    color: var(--muted-text);
}

.alert-box {
    padding: 0.75rem 1rem;
    border-radius: 0.5rem;
    margin: 1rem 0;
    text-align: center;
    font-weight: 500;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-size: 0.9rem;
}

.alert-box.warning {
    background: #fffbeb;
    color: #b45309;
    border: 1px solid #fde68a;
}

.action-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: 0.75rem;
    margin-top: 1rem;
}

.action-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    width: 100%;
    background: var(--card);
    border: 1px solid var(--border);
    color: var(--text);
    padding: 0.75rem 1rem;
    border-radius: 0.5rem;
    cursor: pointer;
    font-weight: 500;
    font-size: 0.9rem;
    transition: background 0.2s;
}

.action-btn:hover {
    background: var(--bg-hover);
}

.action-btn.secondary {
    color: var(--muted-text);
}

.action-btn.secondary:hover {
    color: var(--primary);
    border-color: var(--primary);
}

.hash-info {
    margin-top: 1.5rem;
    text-align: left;
    background: var(--bg);
    padding: 1rem;
    border-radius: 0.5rem;
    border: 1px solid var(--border);
    font-size: 0.85rem;
    color: var(--text);
}

.hash-info code {
    background: var(--card);
    padding: 0.1rem 0.3rem;
    border-radius: 0.25rem;
    font-family: monospace;
    color: var(--primary);
}

.share-buttons {
    display: flex;
    gap: 0.75rem;
    align-items: center;
    justify-content: center;
    margin: 1.5rem 0;
    color: var(--muted-text);
    font-weight: 500;
}

.share-btn {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    text-decoration: none;
    font-size: 1.2rem;
    border: none;
    cursor: pointer;
    transition: opacity 0.2s;
}

.share-btn:hover { opacity: 0.9; }
.share-btn.whatsapp { background: #25D366; }
.share-btn.twitter { background: #1DA1F2; }
.share-btn.email { background: #ea4335; }
.share-btn.copy { background: #6b7280; }

.reactions {
    display: flex;
    justify-content: center;
    gap: 1rem;
    padding-top: 1rem;
    border-top: 1px solid var(--border);
}

.react-btn {
    background: var(--bg);
    border: 1px solid var(--border);
    padding: 0.5rem 1.25rem;
    border-radius: 2rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text);
    font-weight: 500;
    transition: background 0.2s;
}

.react-btn:hover {
    background: var(--bg-hover);
    border-color: var(--primary);
    color: var(--primary);
}

.report-section {
    margin-top: 1.5rem;
}

.report-link {
    background: none;
    border: none;
    color: var(--muted-text);
    cursor: pointer;
    text-decoration: underline;
    font-size: 0.875rem;
}

.report-link:hover {
    color: var(--text);
}

.comments-section {
    width: 100%;
    max-width: 600px;
    background: var(--card);
    padding: 2rem;
    border-radius: 1rem;
    border: 1px solid var(--border);
}

.comments-section h3 {
    font-size: 1.25rem;
    margin-bottom: 1.5rem;
    color: var(--text);
}

.comment-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 1.5rem;
}

.comment {
    background: var(--bg);
    padding: 1rem;
    border-radius: 0.5rem;
    border: 1px solid var(--border);
}

.comment strong {
    color: var(--text);
    font-size: 0.95rem;
}

.comment p {
    margin: 0.25rem 0;
    color: var(--text);
    word-break: break-word;
    font-size: 0.95rem;
}

.comment small {
    font-size: 0.75rem;
    color: var(--muted-text);
    opacity: 0.8;
}

#commentForm {
    display: flex;
    gap: 0.75rem;
}

#commentForm input {
    flex: 1;
    padding: 0.75rem;
    border-radius: 0.5rem;
    border: 1px solid var(--border);
    background: var(--bg);
    color: var(--text);
}

#commentForm input:focus {
    outline: none;
    border-color: var(--primary);
}

#commentForm button {
    background: var(--primary);
    color: white;
    border: none;
    padding: 0 1.25rem;
    border-radius: 0.5rem;
    cursor: pointer;
    font-weight: 500;
}

/* Modal Styles */
.modal-backdrop {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.6);
    backdrop-filter: blur(2px);
    z-index: 1000;
    display: none;
    align-items: center;
    justify-content: center;
    transition: opacity 0.2s;
    opacity: 0;
}

.modal-backdrop.active {
    opacity: 1;
    pointer-events: auto;
    display: flex;
}

.modal-content {
    background: var(--card);
    padding: 2rem;
    border-radius: 0.75rem;
    width: 90%;
    max-width: 450px;
    box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    border: 1px solid var(--border);
}

.modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
}

.modal-header h3 {
    font-size: 1.25rem;
    margin: 0;
    color: var(--text);
}

.modal-close {
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    color: var(--muted-text);
}

.modal-form-group {
    margin-bottom: 1rem;
}

.modal-form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
    color: var(--text);
}

.modal-input {
    width: 100%;
    padding: 0.75rem;
    border-radius: 0.5rem;
    border: 1px solid var(--border);
    background: var(--bg);
    color: var(--text);
    resize: vertical;
    box-sizing: border-box;
}

@media (max-width: 600px) {
    .download-page-container {
        padding: 1rem;
    }
    
    .download-card, .comments-section {
        padding: 1.5rem;
    }

    .filename {
        font-size: 1.25rem;
    }

    .file-meta {
        font-size: 0.8rem;
    }

    .btn-download {
        font-size: 1rem;
        padding: 0.875rem;
    }
    
    .action-grid {
        grid-template-columns: 1fr;
    }
}