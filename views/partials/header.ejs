<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? `${title} - w upload` : 'w upload' %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/public/css/main.css">
    <% if (typeof pageCss !== 'undefined') { %>
        <link rel="stylesheet" href="/public/css/<%= pageCss %>.css">
    <% } %>
</head>
<body>
    <!-- Global Announcement Bar -->
    <% if (locals.systemConfig && locals.systemConfig.globalAnnouncement) { %>
        <div class="announcement-bar" style="background:#f59e0b; color:black; text-align:center; padding:0.5rem; font-weight:bold;">
            <i class="fa-solid fa-bullhorn"></i> <%= locals.systemConfig.globalAnnouncement %>
        </div>
    <% } %>

    <div class="toast-container" id="toastContainer"></div>
    
    <nav class="navbar">
        <a href="/" class="logo">w upload</a>

        <div class="nav-right">
            <div class="nav-menu" id="navMenu">
                <% if (locals.isLoggedIn && locals.user) { %>
                    <span class="nav-item welcome-text" style="cursor: default; background: none;">
                        Welcome, <%= user.username %>
                        <% if (user.isVerified) { %> <i class="fa-solid fa-circle-check" style="color:#3b82f6;" title="Verified"></i> <% } %>
                        <% if (user.plan === 'pro') { %> <span class="badge" style="background:gold; color:black; font-size:0.7rem; padding:2px 5px; border-radius:4px;">PRO</span> <% } %>
                    </span>
                    
                    <% if (user.role === 'admin') { %>
                        <a href="/admin" class="nav-item" style="color:#ef4444;"><i class="fa-solid fa-shield-halved"></i> Admin</a>
                    <% } %>

                    <a href="/dashboard" class="nav-item">
                        <i class="fa-solid fa-table-columns"></i> Dashboard
                    </a>
                    <a href="/profile" class="nav-item">
                        <i class="fa-solid fa-user-cog"></i> Profile
                    </a>
                    <a href="/logout" class="nav-item">
                        <i class="fa-solid fa-right-from-bracket"></i> Logout
                    </a>
                <% } else { %>
                    <a href="/docs" class="nav-item">
                        <i class="fa-solid fa-book"></i> API Docs
                    </a>
                    <a href="/login" class="nav-item">Login</a>
                    <a href="/register" class="nav-item primary">Sign Up</a>
                <% } %>
            </div>

            <button class="theme-toggle" onclick="toggleTheme()"><i class="fa-solid fa-moon"></i></button>
            <button class="mobile-menu-toggle" id="mobileMenuToggle">
                <i class="fa-solid fa-bars"></i>
            </button>
        </div>
    </nav>

    <!-- Ads Slot (Jika diaktifkan) -->
    <% if (locals.systemConfig && locals.systemConfig.adsEnabled && (!locals.user || locals.user.plan === 'free')) { %>
        <div class="ad-container" style="text-align:center; padding:1rem; background:var(--bg-secondary);">
            <small>Advertisement</small>
            <%- locals.systemConfig.adScript %>
        </div>
    <% } %>