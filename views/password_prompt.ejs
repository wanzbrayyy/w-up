<%- include('partials/header', { title: 'Password Required', pageCss: 'auth' }) %>
<main class="auth-container">
    <div class="auth-card">
        <h1 class="auth-title"><i class="fa-solid fa-lock"></i> Protected File</h1>
        <p class="auth-subtitle">Enter the password for <%= file.customAlias %> to continue.</p>
        <% if (typeof error !== 'undefined') { %><p style="color:red;text-align:center;"><%= error %></p><% } %>
        <form method="POST" action="/w-upload/file/<%= file.customAlias %>/auth">
            <div class="form-group"><input type="password" name="password" class="form-input" required></div>
            <button type="submit" class="btn-submit">Unlock</button>
        </form>
    </div>
</main>
<%- include('partials/footer') %>