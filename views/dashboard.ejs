<%- include('partials/header', { title: 'Dashboard', pageCss: 'dashboard' }) %>

<div class="dashboard-layout">
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <aside class="sidebar" id="mainSidebar">
        <div class="sidebar-header-mobile">
            <h3>Menu</h3>
            <button class="icon-btn" id="closeSidebarBtn"><i class="fa-solid fa-times"></i></button>
        </div>

        <div class="sidebar-menu">
            <a href="/dashboard" class="menu-item <%= !query.filter && !query.type && !query.folderId ? 'active' : '' %>">
                <i class="fa-solid fa-hard-drive"></i> My Files
            </a>
            <a href="/dashboard?filter=shared" class="menu-item <%= query.filter === 'shared' ? 'active' : '' %>">
                <i class="fa-solid fa-users"></i> Shared with me
            </a>
            <a href="/dashboard?filter=starred" class="menu-item <%= query.filter === 'starred' ? 'active' : '' %>">
                <i class="fa-solid fa-star"></i> Starred
            </a>
            <a href="/dashboard/teams" class="menu-item <%= locals.currentUrl && currentUrl.includes('/dashboard/teams') ? 'active' : '' %>">
                <i class="fa-solid fa-people-group"></i> Teams
            </a>
            <a href="/dashboard?filter=trash" class="menu-item <%= query.filter === 'trash' ? 'active' : '' %>">
                <i class="fa-solid fa-trash-can"></i> Trash
            </a>
            
            <div class="separator"></div>
            <p class="menu-header">Types</p>
            <a href="/dashboard?type=image" class="menu-item <%= query.type === 'image' ? 'active' : '' %>">
                <i class="fa-solid fa-image"></i> Images
            </a>
            <a href="/dashboard?type=video" class="menu-item <%= query.type === 'video' ? 'active' : '' %>">
                <i class="fa-solid fa-video"></i> Videos
            </a>
            <a href="/dashboard?type=doc" class="menu-item <%= query.type === 'doc' ? 'active' : '' %>">
                <i class="fa-solid fa-file-lines"></i> Documents
            </a>
        </div>
        
        <div class="storage-info">
            <% 
                const totalLimit = user.storageLimit + (user.storageBonus || 0);
                const used = user.storageUsed || 0;
                const percentage = totalLimit > 0 ? Math.min(100, (used / totalLimit) * 100) : 0;
            %>
            <div class="progress-bar"><div class="fill" style="width: <%= percentage %>%;"></div></div>
            <small><%= (used / 1024 / 1024 / 1024).toFixed(2) %> GB of <%= (totalLimit / 1024 / 1024 / 1024).toFixed(2) %> GB used</small>
        </div>
    </aside>

    <main class="main-content" id="dropZone">
        <section class="action-bar">
            <div class="left-actions">
                <button class="icon-btn mobile-menu-btn" id="sidebarToggle">
                    <i class="fa-solid fa-bars"></i>
                </button>
                <button class="primary-btn" id="uploadBtn">
                    <i class="fa-solid fa-cloud-arrow-up"></i> <span>Upload</span>
                </button>
                <div class="dropdown">
                    <button class="secondary-btn">
                        <i class="fa-solid fa-plus"></i> <span>New</span>
                    </button>
                    <div class="dropdown-content">
                        <a href="#" id="newFolderBtn"><i class="fa-solid fa-folder-plus"></i> Folder</a>
                        <a href="#" id="remoteUploadBtn"><i class="fa-solid fa-link"></i> Remote URL</a>
                        <a href="#" id="fileRequestBtn"><i class="fa-solid fa-file-import"></i> File Request</a>
                    </div>
                </div>
            </div>
            
            <div class="search-bar-wrapper">
                <form method="GET" action="/dashboard">
                    <% if (query.folderId) { %><input type="hidden" name="folderId" value="<%= query.folderId %>"><% } %>
                    <i class="fa-solid fa-search"></i>
                    <input type="text" name="q" placeholder="Search files..." value="<%= query.q || '' %>">
                </form>
            </div>

            <div class="right-actions">
                <% if (query.filter === 'trash') { %>
                    <button class="danger-btn" id="emptyTrashBtn">Empty Trash</button>
                <% } else { %>
                    <a href="/dashboard?sortBy=createdAt&sortOrder=<%= query.sortOrder === 'asc' ? 'desc' : 'asc' %>" class="icon-btn" title="Sort by Date">
                        <i class="fa-solid fa-arrow-down-wide-short"></i>
                    </a>
                <% } %>
            </div>
        </section>

        <% if (breadcrumbs && breadcrumbs.length > 0) { %>
            <div class="breadcrumbs">
                <a href="/dashboard"><i class="fa-solid fa-home"></i></a>
                <% breadcrumbs.forEach(bc => { %>
                    <span>/</span>
                    <a href="/dashboard?folderId=<%= bc.id %>"><%= bc.name %></a>
                <% }) %>
            </div>
        <% } %>

        <section class="file-grid" id="fileGrid">
            <% if (files.length === 0) { %>
                <div class="empty-state">
                    <i class="fa-solid fa-folder-open"></i>
                    <p>No files found.</p>
                </div>
            <% } %>

            <% files.forEach(file => { 
                const ext = file.originalName.split('.').pop().toLowerCase();
            %>
                <div class="file-card <%= file.isFolder ? 'folder' : '' %>" 
                     data-id="<%= file._id %>" 
                     data-name="<%= file.originalName %>"
                     data-alias="<%= file.customAlias %>"
                     data-type="<%= file.isFolder ? 'folder' : 'file' %>"
                     data-content-type="<%= file.contentType %>"
                     data-ext="<%= ext %>"
                     draggable="true">
                    
                    <div class="selection-check">
                        <input type="checkbox" class="file-check" value="<%= file._id %>">
                    </div>

                    <div class="file-preview">
                        <% if (file.isFolder) { %><i class="fa-solid fa-folder folder-icon"></i>
                        <% } else if (file.contentType.startsWith('image/')) { %><i class="fa-solid fa-image image-icon"></i>
                        <% } else if (file.contentType.startsWith('video/')) { %><i class="fa-solid fa-video video-icon"></i>
                        <% } else if (ext === 'pdf') { %><i class="fa-solid fa-file-pdf file-icon"></i>
                        <% } else if (ext === 'zip' || ext === 'rar') { %><i class="fa-solid fa-file-zipper file-icon"></i>
                        <% } else if (ext === 'md') { %><i class="fa-brands fa-markdown file-icon"></i>
                        <% } else if (['js', 'html', 'css', 'py', 'java', 'json', 'xml', 'sql'].includes(ext)) { %><i class="fa-solid fa-file-code file-icon"></i>
                        <% } else { %><i class="fa-solid fa-file file-icon"></i><% } %>
                    </div>
                    
                    <div class="file-details">
                        <a href="<%= file.isFolder ? `/dashboard?folderId=${file._id}` : `/w-upload/file/${file.customAlias}` %>" class="filename">
                            <%= file.originalName %>
                        </a>
                        <div class="meta">
                            <% if (!file.isFolder) { %>
                                <%= (file.size / 1024 / 1024).toFixed(2) %> MB
                            <% } else { %>
                                <% if(file.collaborators && file.collaborators.length > 0) { %>
                                    <i class="fa-solid fa-users" title="Shared Folder"></i>
                                <% } else { %>Folder<% } %>
                            <% } %>
                            <% if (file.isStarred) { %><i class="fa-solid fa-star star-indicator"></i><% } %>
                        </div>
                    </div>

                    <div class="context-trigger"><i class="fa-solid fa-ellipsis-vertical"></i></div>
                </div>
            <% }) %>
        </section>

        <div class="bulk-actions" id="bulkActions">
            <span><span id="selectedCount">0</span> Selected</span>
            <div class="actions">
                <button id="bulkStarBtn" title="Star/Unstar"><i class="fa-solid fa-star"></i></button>
                <button id="bulkMoveBtn" title="Move"><i class="fa-solid fa-folder-open"></i></button>
                <button id="bulkDeleteBtn" class="danger" title="Delete"><i class="fa-solid fa-trash"></i></button>
            </div>
        </div>
    </main>
</div>

<div class="context-menu" id="contextMenu">
    <ul>
        <li id="cmOpen"><i class="fa-solid fa-up-right-from-square"></i> Open / Edit</li>
        <li id="cmShare"><i class="fa-solid fa-share-nodes"></i> Share</li>
        <li id="cmCopyLink"><i class="fa-solid fa-link"></i> Copy Link</li>
        <li class="separator" id="cmToolsSeparator"></li>
        <li id="cmOCR"><i class="fa-solid fa-wand-magic-sparkles"></i> Extract Text (OCR)</li>
        <li id="cmConvert"><i class="fa-solid fa-right-left"></i> Convert</li>
        <li id="cmExtract"><i class="fa-solid fa-box-open"></i> Extract Archive</li>
        <li class="separator"></li>
        <li id="cmRename"><i class="fa-solid fa-pen"></i> Rename</li>
        <li id="cmMove"><i class="fa-solid fa-folder-tree"></i> Move</li>
        <li id="cmStar"><i class="fa-solid fa-star"></i> Star/Unstar</li>
        <li id="cmInfo"><i class="fa-solid fa-circle-info"></i> Details</li>
        <li class="separator"></li>
        <li id="cmTransferOwner"><i class="fa-solid fa-user-pen"></i> Transfer Ownership</li>
        <li id="cmDelete" class="danger"><i class="fa-solid fa-trash"></i> Delete</li>
    </ul>
</div>

<div class="modal" id="shareModal"><div class="modal-box" style="max-width:600px"><h3>Share Settings</h3><div class="tabs"><button class="tab-btn active" data-tab="tab-collab">Collaborators</button><button class="tab-btn" data-tab="tab-links">Share Links</button><button class="tab-btn" data-tab="tab-analytics">Analytics</button></div><div class="tab-content active" id="tab-collab"><div style="display:flex;gap:10px;margin-bottom:1rem;"><input type="text" id="shareCollabUser" class="full-input" placeholder="Username"><select id="collabRole" class="full-input" style="width:120px; flex-shrink: 0;"><option value="viewer">Viewer</option><option value="uploader">Uploader</option><option value="editor">Editor</option></select><button class="btn primary-btn" id="addCollabBtn">Add</button></div><div id="collaboratorsList" class="items-list"></div></div><div class="tab-content" id="tab-links"><button class="btn secondary-btn" id="createShareLinkBtn" style="margin-bottom:1rem;"><i class="fa-solid fa-plus"></i> Create New Link</button><div id="shareLinksList" class="items-list"></div></div><div class="tab-content" id="tab-analytics"><div style="position: relative; height:200px; width:100%;"><canvas id="analyticsChart"></canvas></div><ul id="analyticsList"></ul></div><div class="modal-footer"><button class="btn cancel-btn">Close</button></div></div></div>
<div class="modal" id="fileRequestModal"><div class="modal-box"><h3>Create File Request</h3><input type="text" id="fileRequestLabel" placeholder="Label (e.g., 'Project Submissions')" class="full-input"><div class="modal-footer"><button class="btn cancel-btn">Cancel</button><button class="btn confirm-btn" id="createFileRequestBtn">Create</button></div></div></div>
<div class="modal" id="folderModal"><div class="modal-box"><h3>New Folder</h3><input type="text" id="folderNameInput" class="full-input"><div class="modal-footer"><button class="btn cancel-btn">Cancel</button><button class="btn confirm-btn" id="createFolderBtn">Create</button></div></div></div>
<div class="modal" id="remoteModal"><div class="modal-box"><h3>Remote Upload</h3><input type="url" id="remoteUrlInput" class="full-input"><div class="modal-footer"><button class="btn cancel-btn">Cancel</button><button class="btn confirm-btn" id="startRemoteBtn">Fetch</button></div></div></div>
<div class="modal" id="renameModal"><div class="modal-box"><h3>Rename</h3><input type="text" id="renameInput" class="full-input"><div class="modal-footer"><button class="btn cancel-btn">Cancel</button><button class="btn confirm-btn" id="confirmRenameBtn">Save</button></div></div></div>
<div class="modal" id="metaModal"><div class="modal-box"><h3>Details</h3><textarea id="descInput" placeholder="Description" class="full-input"></textarea><input type="text" id="tagsInput" placeholder="Tags (comma, separated)" class="full-input"><div class="modal-footer"><button class="btn cancel-btn">Cancel</button><button class="btn confirm-btn" id="saveMetaBtn">Save</button></div></div></div>
<input type="file" id="fileInput" multiple hidden>

<style>
    .tabs { display: flex; border-bottom: 1px solid var(--border); margin-bottom: 1.5rem; }
    .tab-btn { background: none; border: none; padding: 0.75rem 1rem; cursor: pointer; color: var(--muted-text); border-bottom: 2px solid transparent; font-weight: 600; font-size: 0.9rem; }
    .tab-btn.active { color: var(--primary); border-bottom-color: var(--primary); }
    .tab-content { display: none; }
    .tab-content.active { display: block; animation: fadeIn 0.3s ease; }
    @keyframes fadeIn { from { opacity: 0; transform: translateY(5px); } to { opacity: 1; transform: translateY(0); } }
    #analyticsList { list-style-type: none; padding: 0; font-size: 0.9rem; color: var(--muted-text); margin-top: 1.5rem; }
    #analyticsList li { margin-bottom: 0.5rem; }
</style>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
document.addEventListener('DOMContentLoaded', () => {
    const currentFolderId = new URLSearchParams(window.location.search).get('folderId');
    const fileInput = document.getElementById('fileInput');
    const dropZone = document.getElementById('dropZone');
    const sidebar = document.getElementById('mainSidebar');
    const sidebarToggle = document.getElementById('sidebarToggle');
    const sidebarOverlay = document.getElementById('sidebarOverlay');
    const closeSidebarBtn = document.getElementById('closeSidebarBtn');
    
    function toggleSidebar() { sidebar.classList.toggle('active'); sidebarOverlay.classList.toggle('active'); }
    if(sidebarToggle) sidebarToggle.addEventListener('click', toggleSidebar);
    if(closeSidebarBtn) closeSidebarBtn.addEventListener('click', toggleSidebar);
    if(sidebarOverlay) sidebarOverlay.addEventListener('click', toggleSidebar);

    document.getElementById('uploadBtn').addEventListener('click', () => fileInput.click());
    fileInput.addEventListener('change', (e) => handleUpload(e.target.files));
    dropZone.addEventListener('dragover', (e) => { e.preventDefault(); dropZone.classList.add('drag-over'); });
    dropZone.addEventListener('dragleave', () => dropZone.classList.remove('drag-over'));
    dropZone.addEventListener('drop', (e) => { e.preventDefault(); dropZone.classList.remove('drag-over'); handleUpload(e.dataTransfer.files); });
    document.addEventListener('paste', (e) => {
        const files = Array.from(e.clipboardData.items).filter(i => i.kind === 'file').map(i => i.getAsFile());
        if (files.length > 0) handleUpload(files);
    });

    async function handleUpload(files) {
        showToast(`Uploading ${files.length} files...`, 'info');
        for (const file of files) { await uploadStandard(file); }
        setTimeout(() => location.reload(), 1500);
    }
    
    function uploadStandard(file) {
        return new Promise((resolve) => {
            const reader = new FileReader();
            reader.readAsDataURL(file);
            reader.onload = async () => {
                const res = await fetch('/api/upload', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ filename: file.name, contentType: file.type, base64: reader.result, parentId: currentFolderId })
                });
                if(!res.ok) showToast('Upload failed', 'error');
                resolve();
            };
        });
    }

    const contextMenu = document.getElementById('contextMenu');
    let contextTarget = null;
    window.contextTarget = null;

    document.querySelectorAll('.file-card').forEach(card => {
        card.addEventListener('contextmenu', (e) => {
            e.preventDefault();
            contextTarget = card;
            window.contextTarget = card;
            document.querySelectorAll('#contextMenu li[id]').forEach(item => item.style.display = 'flex');
            const isFile = card.dataset.type === 'file';
            let toolsVisible = false;
            if (isFile) {
                if (card.dataset.contentType.startsWith('image/')) { toolsVisible = true; }
                if (card.dataset.ext === 'zip') { toolsVisible = true; }
            }
            document.getElementById('cmOCR').style.display = (isFile && card.dataset.contentType.startsWith('image/')) ? 'flex' : 'none';
            document.getElementById('cmConvert').style.display = (isFile && card.dataset.contentType.startsWith('image/')) ? 'flex' : 'none';
            document.getElementById('cmExtract').style.display = (isFile && card.dataset.ext === 'zip') ? 'flex' : 'none';
            document.getElementById('cmToolsSeparator').style.display = toolsVisible ? 'block' : 'none';
            document.getElementById('renameInput').value = card.dataset.name;
            contextMenu.style.top = `${e.clientY}px`;
            contextMenu.style.left = `${e.clientX}px`;
            contextMenu.style.display = 'block';
        });
    });

    document.addEventListener('click', (e) => {
        if(!e.target.closest('.context-menu')) contextMenu.style.display = 'none';
    });
    
    const allModals = document.querySelectorAll('.modal');
    function closeModal() { allModals.forEach(m => m.classList.remove('active')); }
    allModals.forEach(modal => {
        modal.addEventListener('click', (e) => { if(e.target === modal) closeModal(); });
        modal.querySelector('.cancel-btn')?.addEventListener('click', closeModal);
    });

    const modalTriggers = { 'newFolderBtn': 'folderModal', 'remoteUploadBtn': 'remoteModal', 'fileRequestBtn': 'fileRequestModal', 'cmRename': 'renameModal', 'cmInfo': 'metaModal' };
    Object.entries(modalTriggers).forEach(([btnId, modalId]) => {
        const btn = document.getElementById(btnId);
        if(btn) btn.addEventListener('click', (e) => {
            e.preventDefault();
            contextMenu.style.display = 'none';
            document.getElementById(modalId).classList.add('active');
        });
    });

    async function performAction(url, method, body) {
        try {
            const res = await fetch(url, { method, headers: { 'Content-Type': 'application/json' }, body: JSON.stringify(body) });
            const data = await res.json();
            if (res.ok) {
                showToast(data.message || 'Action completed!', 'success');
                return true;
            } else {
                showToast(data.message || 'An error occurred.', 'error');
                return false;
            }
        } catch (error) {
            showToast('Network error.', 'error');
            return false;
        }
    }

    document.getElementById('cmOpen').addEventListener('click', () => {
        if (!contextTarget) return;
        const url = contextTarget.dataset.type === 'folder' ? `/dashboard?folderId=${contextTarget.dataset.id}` : `/w-upload/file/${contextTarget.dataset.alias}`;
        window.open(url, '_blank');
    });

    document.getElementById('cmCopyLink').addEventListener('click', () => {
        const link = `${window.location.origin}/w-upload/file/${contextTarget.dataset.alias}`;
        navigator.clipboard.writeText(link);
        showToast('Link copied to clipboard!');
    });

    document.getElementById('cmDelete').addEventListener('click', async () => {
        if (!contextTarget || !confirm('Move item to trash?')) return;
        if (await performAction(`/api/files/${contextTarget.dataset.id}`, 'DELETE')) location.reload();
    });

    document.getElementById('confirmRenameBtn').addEventListener('click', async () => {
        if (await performAction(`/api/files/${contextTarget.dataset.id}/rename`, 'PUT', { newName: document.getElementById('renameInput').value })) location.reload();
    });

    document.getElementById('createFolderBtn').addEventListener('click', async () => {
        if (await performAction('/api/folder', 'POST', { name: document.getElementById('folderNameInput').value, parentId: currentFolderId })) location.reload();
    });

    document.getElementById('startRemoteBtn').addEventListener('click', async () => {
        if (await performAction('/api/upload/remote', 'POST', { url: document.getElementById('remoteUrlInput').value, parentId: currentFolderId })) location.reload();
    });

    document.getElementById('saveMetaBtn').addEventListener('click', async () => {
        const body = { description: document.getElementById('descInput').value, tags: document.getElementById('tagsInput').value };
        if (await performAction(`/api/files/${contextTarget.dataset.id}/meta`, 'PUT', body)) location.reload();
    });

    document.getElementById('cmStar').addEventListener('click', async () => {
        if (!contextTarget) return;
        if (await performAction(`/api/files/bulk`, 'POST', { fileIds: [contextTarget.dataset.id], action: 'star' })) location.reload();
    });

    document.getElementById('cmMove').addEventListener('click', async () => {
        if (!contextTarget) return;
        const folderId = prompt("Enter the ID of the destination folder (leave empty for root):");
        if (folderId === null) return;
        if (await performAction(`/api/files/bulk`, 'POST', { fileIds: [contextTarget.dataset.id], action: 'move', targetFolderId: folderId || null })) location.reload();
    });

    document.getElementById('createFileRequestBtn').addEventListener('click', async () => {
        const label = document.getElementById('fileRequestLabel').value;
        const res = await fetch('/api/file-requests', { method: 'POST', headers: {'Content-Type': 'application/json'}, body: JSON.stringify({ label, folderId: currentFolderId }) });
        const data = await res.json();
        if(res.ok) {
            prompt('Here is your File Request link:', data.link);
            closeModal();
        }
    });

    document.getElementById('cmTransferOwner').addEventListener('click', async () => {
        const username = prompt("Enter the username of the new owner:");
        if (!username || !contextTarget) return;
        if (!confirm(`Transfer ownership to ${username}? This cannot be undone.`)) return;
        if (await performAction(`/api/files/${contextTarget.dataset.id}/transfer-ownership`, 'POST', { username })) location.reload();
    });

    document.getElementById('cmShare').addEventListener('click', async () => {
        if (!contextTarget) return;
        document.getElementById('shareModal').classList.add('active');
        await loadShareData();
    });
    
    document.getElementById('addCollabBtn').addEventListener('click', async () => {
        const username = document.getElementById('shareCollabUser').value;
        const role = document.getElementById('collabRole').value;
        if(!username) return;
        if (await performAction(`/api/files/${contextTarget.dataset.id}/collaborator`, 'POST', { username, role })) {
            document.getElementById('shareCollabUser').value = '';
            loadShareData();
        }
    });

    document.getElementById('createShareLinkBtn').addEventListener('click', async () => {
        if (await performAction(`/api/files/${contextTarget.dataset.id}/share-links`, 'POST')) loadShareData();
    });
    
    window.revokeLink = async (linkId) => {
        if(!confirm('Revoke this link?')) return;
        if (await performAction(`/api/files/${contextTarget.dataset.id}/share-links/${linkId}`, 'DELETE')) loadShareData();
    };

    window.removeCollab = async (username) => {
        if(!confirm(`Remove ${username} from collaborators?`)) return;
        // API endpoint to remove a collaborator is missing, this is a placeholder.
        showToast('Remove collaborator API endpoint not implemented yet.', 'warning');
    };
    
    async function loadShareData() {
        if (!contextTarget) return;
        const res = await fetch(`/api/files/${contextTarget.dataset.id}/share-details`);
        if (!res.ok) { showToast('Failed to load share data', 'error'); return; }
        const data = await res.json();
        
        const collabList = document.getElementById('collaboratorsList');
        collabList.innerHTML = data.collaborators.map(c => `<div class="list-item"><span>${c.user.username} (${c.role})</span><button class="icon-btn danger" onclick="removeCollab('${c.user.username}')"><i class="fa-solid fa-trash"></i></button></div>`).join('');

        const linksList = document.getElementById('shareLinksList');
        linksList.innerHTML = data.shareLinks.map(l => {
            const fullLink = `${window.location.origin}/w-upload/file/${contextTarget.dataset.alias}?share_id=${l.linkId}`;
            return `<div class="list-item"><code>${fullLink}</code><div><button class="icon-btn" onclick="navigator.clipboard.writeText('${fullLink}'); showToast('Copied!')"><i class="fa-solid fa-copy"></i></button><button class="icon-btn danger" onclick="revokeLink('${l.linkId}')"><i class="fa-solid fa-trash"></i></button></div></div>`;
        }).join('');
        
        await loadAnalytics();
    }
    
    let analyticsChartInstance;
    async function loadAnalytics() {
        if (!contextTarget) return;
        const res = await fetch(`/api/files/${contextTarget.dataset.id}/analytics`);
        const data = await res.json();
        const ctx = document.getElementById('analyticsChart').getContext('2d');
        const list = document.getElementById('analyticsList');
        list.innerHTML = '';
        
        const labels = data.map(d => d._id || 'Unknown');
        const downloads = data.map(d => d.downloads);
        
        data.forEach(d => { list.innerHTML += `<li>${d._id || 'Unknown'}: ${d.views} views, ${d.downloads} downloads</li>`; });

        if (analyticsChartInstance) analyticsChartInstance.destroy();
        analyticsChartInstance = new Chart(ctx, {
            type: 'bar',
            data: { labels, datasets: [{ label: '# of Downloads by Country', data: downloads, backgroundColor: 'rgba(79, 70, 229, 0.5)', borderColor: 'rgba(79, 70, 229, 1)', borderWidth: 1 }] },
            options: { scales: { y: { beginAtZero: true } } }
        });
    }

    document.querySelectorAll('.tabs .tab-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
            const tabContainer = e.target.closest('.tabs');
            const modalBox = e.target.closest('.modal-box');
            tabContainer.querySelectorAll('.tab-btn').forEach(t => t.classList.remove('active'));
            modalBox.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
            e.target.classList.add('active');
            modalBox.querySelector(`#${e.target.dataset.tab}`).classList.add('active');
        });
    });

    document.getElementById('cmOCR').addEventListener('click', async () => {
        if (!contextTarget) return;
        showToast('Starting OCR...', 'info');
        if(await performAction(`/api/files/${contextTarget.dataset.id}/ocr`, 'POST')) {
            // Further action could be to display result in a modal
        }
    });
    
    document.getElementById('cmExtract').addEventListener('click', async () => {
        if (!contextTarget) return;
        showToast('Extracting archive...', 'info');
        if (await performAction(`/api/files/${contextTarget.dataset.id}/extract`, 'POST')) setTimeout(() => location.reload(), 1000);
    });

    document.getElementById('cmConvert').addEventListener('click', async () => {
        if (!contextTarget) return;
        const toFormat = prompt('Convert image to which format? (e.g., jpg, png, webp)', 'jpg');
        if (!toFormat) return;
        showToast(`Converting to ${toFormat}...`, 'info');
        if (await performAction(`/api/files/${contextTarget.dataset.id}/convert`, 'POST', { toFormat })) setTimeout(() => location.reload(), 1000);
    });

    const selectedIds = new Set();
    document.querySelectorAll('.file-check').forEach(chk => {
        chk.addEventListener('change', (e) => {
            const card = e.target.closest('.file-card');
            if (e.target.checked) { selectedIds.add(e.target.value); card.classList.add('selected'); }
            else { selectedIds.delete(e.target.value); card.classList.remove('selected'); }
            const bar = document.getElementById('bulkActions');
            document.getElementById('selectedCount').textContent = selectedIds.size;
            if(selectedIds.size > 0) bar.classList.add('active'); else bar.classList.remove('active');
        });
    });

    document.getElementById('emptyTrashBtn')?.addEventListener('click', async () => {
        if(!confirm('Permanently delete all files in trash?')) return;
        if(await performAction('/api/trash/empty', 'DELETE')) location.reload();
    });

    async function handleBulkAction(action, extraParams = {}) {
        const ids = Array.from(selectedIds);
        if (ids.length === 0) return;
        if (await performAction('/api/files/bulk', 'POST', { fileIds: ids, action, ...extraParams })) location.reload();
    }

    document.getElementById('bulkDeleteBtn').addEventListener('click', () => handleBulkAction('delete'));
    document.getElementById('bulkStarBtn').addEventListener('click', () => handleBulkAction('star'));
    document.getElementById('bulkMoveBtn').addEventListener('click', () => {
        const folderId = prompt("Enter destination folder ID (leave empty for root):");
        if (folderId !== null) handleBulkAction('move', { targetFolderId: folderId || null });
    });
});
</script>

